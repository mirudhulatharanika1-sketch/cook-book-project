<body>
  <header>
    <h1>üç¥ My Cookbook</h1>
  </header>

  <div class="container">
    <div class="recipe-list">
      <h2>Recipes</h2>
      <ul id="recipes">
        <li onclick="showRecipe('pasta')">Creamy Pasta</li>
        <li onclick="showRecipe('pancakes')">Fluffy Pancakes</li>
        <li onclick="showRecipe('salad')">Fresh Salad</li>
      </ul>
    </div>

    <div class="recipe-details" id="details">
      <h2>Choose a recipe to see details</h2>
    </div>
  </div>

  <script>
    const recipeData = {
      pasta: {
        name: "Creamy Pasta",
        ingredients: ["200g pasta", "1 cup cream", "2 garlic cloves", "Cheese", "Salt & Pepper"],
        steps: ["Boil pasta", "Prepare sauce with garlic & cream", "Mix pasta & sauce", "Top with cheese"]
      },
      pancakes: {
        name: "Fluffy Pancakes",
        ingredients: ["1 cup flour", "1 egg", "1 cup milk", "2 tbsp sugar", "Butter"],
        steps: ["Mix ingredients", "Pour batter on pan", "Cook until golden", "Serve with syrup"]
      },
      salad: {
        name: "Fresh Salad",
        ingredients: ["Lettuce", "Tomatoes", "Cucumber", "Olive oil", "Lemon juice"],
        steps: ["Chop veggies", "Mix in bowl", "Add olive oil & lemon juice", "Serve fresh"]
      }
    };

    function showRecipe(key) {
      const recipe = recipeData[key];
      document.getElementById("details").innerHTML = `
        <h2>${recipe.name}</h2>
        <div class="ingredients">
          <h3>Ingredients:</h3>
          <ul>${recipe.ingredients.map(i => <li>${i}</li>).join("")}</ul>
        </div>
        <div class="steps">
          <h3>Steps:</h3>
          <ol>${recipe.steps.map(s => <li>${s}</li>).join("")}</ol>
        </div>
      `;
    }
  </script>
</body>
</html>
